# Supabase Configuration (automatically provided when running locally)
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Public Storage URL (for generating public URLs to stored files)
PUBLIC_STORAGE_URL=http://localhost:54321

# Timezone (used by schedule and ticker functions)
# Replaces SCHEDULE_TIMEZONE and TICKER_TIMEZONE (those still work as fallbacks)
TIMEZONE=America/New_York

# AI Provider Keys
ANTHROPIC_API_KEY=sk-ant-api03-...

# Associated Press API
AP_API_KEY=your-ap-api-key

# Vizrt Ticker Configuration
# When set, image URLs will be replaced with local file paths for caching
CACHE_PATH=D:\temp\nova_cache

# Fetch Proxy Configuration
# Comma-separated list of allowed domains for the proxy
ALLOWED_PROXY_DOMAINS=example.com,api.example.com

# File Server Configuration (for sync-file-integration)
FILE_SERVER_URL=http://localhost:8001

# Legacy TLS Proxy (for school_closing function - handles legacy TLS servers)
# Deploy legacy-tls-proxy to Railway/Render and set the URL here
LEGACY_TLS_PROXY_URL=https://your-legacy-tls-proxy.railway.app
